<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Optional: generate XML docs for swagger -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.6" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Pastel.Evolution">
      <HintPath>Lib\Pastel.Evolution.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Pastel.Evolution.Common">
      <HintPath>Lib\Pastel.Evolution.Common.dll</HintPath>
      <Private>true</Private>
    </Reference>
  </ItemGroup>

</Project>
